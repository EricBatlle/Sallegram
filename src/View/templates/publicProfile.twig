{% extends "base.twig" %}

{#{% block title %}User info{% endblock %}#}

{% block content %}
    <h1 class="text-center"> {{ profile.username }} Profile</h1>
    <p class="text-center">{{ count|length }} images      |      {{ comments|length }} comments</p>

    <form action="/profile/{{ profile.id }}" method = "POST">
        <select name="options" class="comment" id="selector">
            {% if option == 1 %}
                <option value="1" selected >Creation date</option>
                <option value="2">Likes</option>
                <option value="3">Comments</option>
                <option value="4">Visits</option>
            {% elseif option == 2 %}
                <option value="1">Creation date</option>
                <option value="2" selected >Likes</option>
                <option value="3">Comments</option>
                <option value="4">Visits</option>
            {% elseif option == 3 %}
                <option value="1">Creation date</option>
                <option value="2">Likes</option>
                <option value="3" selected >Comments</option>
                <option value="4">Visits</option>
            {% elseif option == 4 %}
                <option value="1">Creation date</option>
                <option value="2">Likes</option>
                <option value="3" selected>Comments</option>
                <option value="4">Visits</option>
            {% endif %}

        </select>
        <input type="submit" value="Send" id="orden">
    </form>
    {% for i in 1..photos|length if photos|length > 0%}
        <img src="/assets/uploads/{{ photos[i-1].img_path }}" class="img-responsive img-thumbnail" alt="Responsive image">
        <p class="text-center"><a href="/photo/{{ photos[i-1].id }}">{{ photos[i-1].title }}</a></p>
    {% endfor %}
    {% for i in 1..photos1|length if photos1|length > 0%}
        <img src="/assets/uploads/{{ photos1[i-1].img_path }}" class="img-responsive img-thumbnail" alt="Responsive image">
        <p class="text-center"><a href="">{{ photos1[i-1].title }}</a></p>
    {% endfor %}

{% endblock %}


{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('/select.js','js') }}" type="text/javascript" charset="utf-8"></script>

{% endblock %}

