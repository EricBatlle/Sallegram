{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        h1{ text-transform: uppercase;}
    </style>
{% endblock %}

{% block content %}
    <h1>Edit Image </h1>
    <form action="/edit/{{ photos.id }}" METHOD="POST" enctype="multipart/form-data">
        {{ form_widget(form, {'attr': {'id': 'src'}}) }}
    </form>

    {% if ok == false %}
        <h3>Something goes wrong</h3>
    {% endif %}

{% endblock %}