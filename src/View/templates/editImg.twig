{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        h1{ text-transform: uppercase;}
    </style>
{% endblock %}

{% block content %}
    <h1>Edit Image </h1>
    <form action="/myphotos/edit/{{ photos.id }}" METHOD="POST" enctype="multipart/form-data">
        <img id="thumbnail" src="/assets/uploads/{{ photos.img_path }}" width="200" height="200"  />
        {{ form_widget(form, {'attr': {'id': 'src'}}) }}
    </form>

    {% if ok == false %}
        <h3>Something goes wrong</h3>
    {% endif %}

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('/thumbnail.js','js') }}" type="text/javascript" charset="utf-8"></script>
{% endblock %}