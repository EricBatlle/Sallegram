            <img src="/assets/uploads/{{ photos[i-1].img_path }}" class="img-responsive img-thumbnail" alt="Responsive image">
            <h3 class="text-center">{{ photos[i-1].title }}</h3>
            <p class="text-center">
                <a id="edit" href="/myphotos/remove/{{ photos[i-1].id }}" onclick="return confirm('Â¿Seguro que desea eliminar esta imagen?')">Remove</a>
                <a id="edit" href="/myphotos/edit/{{ photos[i-1].id }}">Edit</a>
            </p>
        </div>
    {% endfor %}
{% endblock %}